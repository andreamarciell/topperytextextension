{
  "manifest_version": 3,
  "name": "TopText",
  "version": "1.0.7",
  "description": "Replaces your triggers with custom text anywhere in the browser in real time. Easy trigger management with backup/import from the settings page.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://topperytext.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "TopText",
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://online.wellsfargo.com/*",
        "*://www.wellsfargo.com/*",
        "*://www.bankofamerica.com/*",
        "*://online.citi.com/*",
        "*://www.chase.com/*",
        "*://www.usbank.com/*",
        "*://*.paypal.com/*",
        "*://www.amazon.com/ap/*",
        "*://signin.aws.amazon.com/*",
        "*://accounts.google.com/*",
        "*://*.google.com/accounts/*",
        "*://login.microsoftonline.com/*",
        "*://auth.openai.com/*",
        "*://github.com/login/*",
        "*://github.com/sessions/*",
        "*://www.facebook.com/login/*",
        "*://appleid.apple.com/*",
        "*://secure.login.gov/*",
        "*://login.yahoo.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://topperytext.netlify.app;"
  }
}